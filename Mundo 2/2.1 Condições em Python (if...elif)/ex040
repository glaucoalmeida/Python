n1 = float(input('Digite a primeira nota: '))
n2 = float(input('Digite a segunda nota: '))
m = (n1 + n2)/2
if m >= 7:
    print('-=' * 20)
    print(f'Sua média foi {m:.1f}.')
    print ('APROVADO.')
    print('-=' * 20)
elif m >= 5 and m < 7:
    print('-=' * 20)
    print(f'Sua média foi {m:.1f}.')
    print ('RECUPERAÇÃO.')
    print('-=' * 20)
else:
    print('-=' * 20)
    print(f'Sua média foi {m:.1f}.')
    print ('REPROVADO.')
    print('-=' * 20)
