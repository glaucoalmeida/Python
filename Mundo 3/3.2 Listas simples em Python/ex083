e = str(input('Digite sua expressão: '))
l = []
for s in e:
    if s == '(':
        l.append('(')
    elif s == ')':
        if len(l) > 0:
            l.pop()
        else:
            l.append(')')
            break
if len(l) == 0:
    print ('Expressão válida.')
else:
    print ('Expressão inválida.')
